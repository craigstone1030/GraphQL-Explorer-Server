{
  "name": "GraphQL-Explorer-Server",
  "restartable": "r",
  "delay": "500",
  "ignore": [
    ".git",
    "node_modules/**",
    "client/dist",
    "client/src",
    "client/.cache",
    "server/logs",
    "/**/*.json",
    "/**/*.graphql",
    "/**/*.gql"
  ],
  "verbose": true,
  "execMap": {
    "": "node",
    "js": "node --harmony",
    "ts": "ts-node "
  },
  "ext": "js json ts db",
  "watch": ["./server/**/*.ts"],
  "legacy-watch": false
}
